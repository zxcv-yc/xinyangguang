page {
    background-color: #f8f8f8;
    height: auto;
}

.userInfo {
    width: 720rpx;
    height: 78rpx;
    line-height: 78rpx;
    font-size: 26rpx;
    color: #a2a2a2;
    margin-left: 30rpx;
}

.specialty {
    position: relative;
    width: 100%;
    height: 390rpx;
    font-size: 34rpx;
    color: #757575;
    background-color: #ffffff;
    border: 2rpx solid #f1f1f1;
}

.specialty textarea {
    width: 690rpx;
    margin: 20rpx 30rpx 25rpx;
}

.input-info {
    position: absolute;
    bottom: 25rpx;
    right: 30rpx;
}

.confirm-btn {
    width: 100%;
    height: 86rpx;
    line-height: 86rpx;
    margin-top: 35rpx;
}

.confirm-btn button {
    width: 690rpx;
    height: 86rpx;
    margin: 0 30rpx;
    background-color: #ff644a;
    border: 1rpx solid #df5300;
    color: #ffffff;
}

.confirm-btn button.huise {
    background-color: #888;
}
.checkbox{
  margin-left: 40rpx;
  margin-bottom: 10rpx;
  display: block;
  width: 100vw;
}
.timetitle{
  margin-left: 40rpx;
  color: #a2a2a2;
  font-size: 34rpx;
  margin-bottom: 20rpx;
}
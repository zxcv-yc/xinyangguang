}

.h88 {
    height: 88rpx;
    line-height: 88rpx;
}

.screen-none {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background-color: #fff;
    z-index: 3;
}

.screen-option {
    width: 100%;
    height: 62rpx;
    line-height: 62rpx;
    background-color: #f7f7f7;
    text-align: left;
}

.screen-all {
    display: block;
    width: 186rpx;
    height: 66rpx;
    line-height: 66rpx;
    margin: 0;
    background-color: transparent;
    overflow: hidden;
}

.screen-all.hover::after {
    border-color: #ff644a;
}

.screen-item {
    float: left;
    display: block;
    width: 186rpx;
    height: 66rpx;
    line-height: 66rpx;
    margin: 20rpx 60rpx 0rpx 0;
    background-color: transparent;
    overflow: hidden;
}

.screen-item:nth-child(3n+1) {
    margin-right: 0;
}

.screen-item.hover::after {
    border-color: #ff644a;
}

.mask {
    position: fixed;
    display: block;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.4);
    z-index: 2;
}

.shadebox {
    position: relative;
}

.shade {
    position: absolute;
    top: 50%;
    left: 0;
    background: rgba(230,69,74,0.6);
    width: 98rpx;
    height: 98rpx;
    border-radius: 50%;
    color: #fff;
    text-align: center;
    line-height: 98rpx;
    transform: translateY(-50%);
}

